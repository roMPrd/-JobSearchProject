<div class="signup-container">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), input_html: { autocomplete: 'disabled' }) do |f| %>
    <div class="form-fields">
      <%= f.input :email,
                  label: false,
                  placeholder: "Email",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: 'disabled' } %>
      <%= f.input :password,
                  label: false,
                  placeholder: "Password",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "button-main" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
