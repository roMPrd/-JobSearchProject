<div class="form-container">
  <div class="form-background-gradient">
    <div class="form-container-field background-white">
      <h1>Log in</h1>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-field-item" }) do |f| %>

        <%# <div class="form-field-item"> %>
          <div data-controller="forms" data-action="click->forms#toggleField" data-forms-field-value= "email-sign-up">
            <%= f.input :email,
                        label: false,
                        placeholder: "Email",
                        required: false,
                        autofocus: true,
                        input_html: {
                          autocomplete: 'email',
                          class: "form-field"
                        } %>
          </div>
          <div class="field email-sign-up"></div>

          <div data-controller="forms" data-action="click->forms#toggleField" data-forms-field-value= "password-sign-up">
            <%= f.input :password,
                        label: false,
                        placeholder: "Password",
                        required: false,
                        input_html: {
                          autocomplete: "current-password",
                          class: "form-field"
                        } %>
          </div>
          <div class="field password-sign-up"></div>

          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "button-main", style: "cursor: pointer" %>
          </div>

          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <%# </div> %>
      <% end %>

      <%#= render "devise/shared/links" %>
    </div>
  </div>
</div>
